{
  "name": "@kale/monorepo",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@9.15.3",
  "author": "xulai <xulai.me@foxmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PeopleWhoListenToStories/kale.git"
  },
  "bugs": {
    "url": "https://github.com/PeopleWhoListenToStories/kale/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "test": "vitest run",
    "test:dev": "vitest",
    "lint": "turbo run lint",
    "clean": "rimraf ./node_modules ./packages/*/node_modules",
    "clean:dist": "rimraf packages/*/dist",
    "publish-packages": "turbo run build lint test && changeset version && changeset publish",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "commit": "commit",
    "sync": "turbo run sync",
    "docs": "pnpm -C docs dev",
    "docs:dev": "pnpm -C docs docs:dev",
    "docs:build": "pnpm run -C docs docs:build",
    "-------": "-----------",
    "release": "changeset",
    "pr": "changeset pre enter alpha",
    "pr:beta": "changeset pre enter beta",
    "pr:rc": "changeset pre enter rc",
    "pr:exit": "changeset pre exit",
    "cv": "changeset version ",
    "--------": "----------------"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.11",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@commitlint/prompt-cli": "^19.7.0",
    "@commitlint/types": "^19.5.0",
    "@eslint/config-inspector": "^1.0.0",
    "@eslint/eslintrc": "^3.2.0",
    "@kale/stylelint-config": "workspace:*",
    "@types/eslint-plugin-tailwindcss": "^3.17.0",
    "@types/eslint__eslintrc": "^2.1.2",
    "@types/fs-extra": "^11.0.4",
    "@types/get-value": "^3.0.5",
    "@types/git-url-parse": "^9.0.3",
    "@types/klaw": "^3.0.6",
    "@types/lint-staged": "^13.3.0",
    "@types/lodash": "^4.17.14",
    "@types/lodash-es": "^4.17.12",
    "@types/micromatch": "^4.0.9",
    "@types/node": "^22.10.7",
    "@types/set-value": "^4.0.3",
    "@vitest/coverage-v8": "~3.0.3",
    "ci-info": "^4.1.0",
    "cross-env": "^7.0.3",
    "defu": "^6.1.4",
    "eslint": "^9.18.0",
    "eslint-flat-config-utils": "^1.0.0",
    "execa": "^9.5.2",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.0",
    "get-value": "^3.0.1",
    "husky": "^9.1.7",
    "jiti": "^2.4.2",
    "klaw": "^4.1.0",
    "lint-staged": "^15.4.1",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "micromatch": "^4.0.8",
    "only-allow": "^1.2.1",
    "pathe": "^2.0.2",
    "pkg-types": "^1.3.1",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "set-value": "^4.1.0",
    "stylelint": "16.13.2",
    "tslib": "^2.8.1",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.3",
    "unbuild": "^3.3.1",
    "vitest": "~3.0.3",
    "yaml": "^2.7.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
